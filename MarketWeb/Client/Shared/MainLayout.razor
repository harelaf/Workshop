@inherits LayoutComponentBase
@using MarketWeb.Client.Connect
@using MarketWeb.Client.Helpers
@inject IMarketAPIClient marketAPIClient
@inject NavigationManager NavigationManager

@if (marketAPIClient.LoggedIn)
{
    <div class="main">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" href="">MarketWebProject</a>
                    <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                        <NavLink class="nav-link text-dark" href="/ShoppingCart" Match="NavLinkMatch.All">
                            <img alt="cart" src="https://i.pinimg.com/originals/15/4f/df/154fdf2f2759676a96e9aed653082276.png" width="40" height="40">
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/account/profile" Match="NavLinkMatch.All">
                            <img alt="profile" src="https://icons-for-free.com/iconfiles/png/512/avatar+human+man+profile+icon-1320085876716628234.png" width="40" height="40" />
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/Logout" Match="NavLinkMatch.All">
                            Logout
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/MyPurchaseHistory" Match="NavLinkMatch.All">
                            Purchase History
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/MyMessages" Match="NavLinkMatch.All">
                            Messages
                        </NavLink>
                        <NavLink class="nav-link text-dark" href="/openNewStore" Match="NavLinkMatch.All">
                            Open New Store
                        </NavLink>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                <Alert />
                @Body
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - Market Project - Afik | Avishay | Harel | Oren | Ron
            </div>
        </footer>
    </div>
}
